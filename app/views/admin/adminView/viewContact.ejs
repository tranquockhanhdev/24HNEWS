<div id="main-content" class="container allContent-section py-4">
    <h3>Danh Mục</h3>
    <table class="table ">
        <thead>
            <tr>
                <th class="text-center">Tên Web</th>
                <th class="text-center">Địa Chỉ</th>
                <th class="text-center">Số điện thoại</th>
                <th class="text-center">email</th>
                <th class="text-center">facebook</th>
                <th class="text-center">youtube</th>

                <th class="text-center" colspan="2">Action</th>
            </tr>
        </thead>
        <tbody>
            <% data.list.forEach((item) => { %>
            <tr>
                <td><%= item.ten %></td>
                <td><%= item.diachi %></td>
                <td><%= item.sodienthoai %></td>
                <td><%= item.email %></td>
                <td><%= item.facebook %></td>
                <td><%= item.youtube %></td>
                <td>
                    <button class="btn btn-primary" onclick="editcontact('<%=item.id%>')" style="height:40px"
                        data-toggle="modal" data-target="#editcontact">Edit</button>
                </td>
            </tr>
            <% }); %>
        </tbody>
    </table>

    <div class="modal fade" id="editcontact" role="dialog">
        <div class="modal-dialog">

            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Sửa Thông Tin Web</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <form id="editForm">
                        <div class="form-group">
                            <label for="c_name">Tên Web</label>
                            <input type="text" class="form-control" name="edit_ct_web" required>
                        </div>
                        <div class="form-group">
                            <label for="c_name">Địa Chỉ:</label>
                            <input type="text" class="form-control" name="edit_ct_diachi" required>
                        </div>
                        <div class="form-group">
                            <label for="c_name">Số Điện Thoại:</label>
                            <input type="text" class="form-control" name="edit_ct_sdt" required>
                        </div>
                        <div class="form-group">
                            <label for="c_name">Email:</label>
                            <input type="text" class="form-control" name="edit_ct_email" required>
                        </div>
                        <div class="form-group">
                            <label for="c_name">facebook:</label>
                            <input type="text" class="form-control" name="edit_ct_facebook" required>
                        </div>
                        <div class="form-group">
                            <label for="c_name">youtube:</label>
                            <input type="text" class="form-control" name="edit_ct_youtube" required>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-secondary" name="uploaddanhmuc" style="height:40px">Sửa
                                Contact</button>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal"
                        style="height:40px">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>